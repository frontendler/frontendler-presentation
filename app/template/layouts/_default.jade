		link(rel='apple-touch-icon',sizes='76x76',href='/assets/images/favicon/icon_76x76.png')
		link(rel='apple-touch-icon',href='/assets/images/ico/icon_57x57.png')
		// FAVICON - ANDROID 
		meta(name='mobile-web-app-capable', content='yes')
		meta(name='application-name', content='Web Starter Kit')
		link(rel='icon', sizes='192x192', href='images/touch/chrome-touch-icon-192x192.png')
		// FAVICON - WINDOWS TILE 
		meta(name='msapplication-TileImage', content='/assets/images/ico/tile.png')
		meta(name='msapplication-TileColor', content='#174c6b')
		// CSS - FONT 
		link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro|Grand+Hotel|Open+Sans:400italic,400,600,700,300',rel='stylesheet',type='text/css')
		// CSS - HEAD 
		// build:css /assets/styles/main.css
		link(rel='stylesheet', href='/assets/styles/reset.css')
		link(rel='stylesheet', href='/assets/styles/main.css')
		// endbuild
		// build:js /assets/scripts/modernizr.js
		script(src='assets/scripts/libs/modernizr.js')
